@page
@model Kantar.ShoppingBasket.Presentation.WebApi.Pages.Basket.HistoryModel

<h2>Purchase History</h2>
@if (!string.IsNullOrEmpty(Model.HistoryMessage))
{
    <div class="alert alert-info">@Model.HistoryMessage</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Basket Id</th>
            <th>Date</th>
            <th>Total</th>
            <th>Currency</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Receipts == null || Model.Receipts.Count == 0)
        {
            <tr>
                <td colspan="5">
                    <span class="text-info">No purchase history available.</span>
                </td>
            </tr>
        }
        else
        {
            foreach (var receipt in Model.Receipts)
            {
                <tr>
                    <td>@receipt.BasketId</td>
                    <td>@receipt.Date.ToString("g")</td>
                    <td>@receipt.TotalCost.ToString("F2")</td>
                    <td>@receipt.Currency</td>
                    <td>
                        <form method="post" asp-page-handler="DownloadReceipt">
                            <input type="hidden" name="receiptId" value="@receipt.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">Download PDF</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="mt-4">
    <a class="btn btn-secondary" href="/Products/ProductListing">Back to Products</a>
</div>